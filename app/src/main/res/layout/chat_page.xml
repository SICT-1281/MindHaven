<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#87A96B"
    android:padding="24dp">

    <!-- Title Text -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How are you feeling today?"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp" />

    <!-- Input Field -->
    <LinearLayout
        android:id="@+id/searchContainer"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/titleText"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:background="#33FFFFFF"
        android:elevation="4dp">

        <EditText
            android:id="@+id/editText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Tell us how you're feeling..."
            android:background="@android:color/transparent"
            android:textColor="#FFFFFF"
            android:textColorHint="#DDDDDD"
            android:inputType="text"
            android:minHeight="48dp" />

    </LinearLayout>

    <!-- Mood Buttons -->
    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/searchContainer"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="4"
        android:layout_marginTop="16dp">

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Anxiety"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:background="@drawable/lighterblue_rounded_button" />

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Stress"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:layout_marginStart="8dp"
            android:background="@drawable/red_rounded_button" />

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Sleep Trouble"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:layout_marginStart="8dp"
            android:background="@drawable/yellow_rounded_button" />

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Talk to Someone"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:layout_marginStart="8dp"
            android:background="@drawable/blue_rounded_button" />
    </LinearLayout>

    <TextView
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MindHaven"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_alignParentStart="true"
        android:layout_marginTop="1dp"
        android:layout_marginStart="10dp"/>

</RelativeLayout>
